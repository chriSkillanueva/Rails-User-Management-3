<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>All the Users</title>
    </head>

    <body>
        <h1>Listing Users</h1>
	    <table>
		    <thead>
			    <tr>
				    <th>First Name</th>
				    <th>Last Name</th>
				    <th>Email Address</th>
				    <th>Actions</th>
			    </tr>
		    </thead>
		    <tbody>
			    <% @users.each do |user| %>
			    <tr>
				    <td width="25%"><%= user.first_name %></td>
				    <td width="25%"><%= user.last_name %></td>
				    <td width="25%"><%= user.email %></td>
				    <td width="25%">
                        <a href="/users/<%= user.id %>"><button>Show</button><a> |
                        <a href="/users/<%= user.id %>/edit"><button>Edit</button><a> |
                        <form action="/users/<%= user.id %>" method="post" style="display:inline-block">
                            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                            <input type="hidden" name="_method" value="delete">
                            <button type="submit">Destroy</button>
                        </form>
                    </td>
			    </tr>
			    <% end %>
		    </tbody>
	    </table>
        <br>
        <a href="/new"><button>New User</button></a>
    </body>
</html>
